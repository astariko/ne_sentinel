
<%= form_for [@user, @branch], remote: true, html: { style: "display:inline;" } do |f| %>

  <div class="modal-body">
    <ul class="errors"></ul>

    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">>
      <%= f.label "release complete?" %><br>
      <%= f.check_box :completed %>
    </div>
    <div class="form-group">
      <%= f.label :root %><br>
      <%= f.text_field :root %>
    </div>
    <div class="form-group">
      <%= f.label :http %><br>
      <%= f.text_field :http %>
    </div>

  </div>

  <div class="modal-footer">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
<% end %>
