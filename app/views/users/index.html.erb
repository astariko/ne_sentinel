<div id="main-content" class="container">
  <%= render "/leftpane" %>

    <div id= "load-list" class="subcontainer col-lg-5 col-md-5">
      <div class="col-lg-8 col-md-8 col-sm-8">

        <div class="form-group">
          <label for="branch-pick">Select branch:</label>
          <select class="form-control" id="branch-pick">
          <!--                          NE list                              -->
          <% for branch in @branches %>        
            <option><%=branch.name%></option>
          <% end %>
          </select>


        </div>

        <div class="col-lg-6 col-md-6 col-sm-6">
          <span> Sanity is clean </span>
        </div>
      </div>
    </div> <!-- load-list -->
    <div id= "profile-list" class="subcontainer col-lg-5 col-md-5">
      <div class="col-lg-8 col-md-8 col-sm-8">

         <div class="form-group">
          <label for="profile-pick">Select profile:</label>
          <select class="form-control" id="load-pick">
            <option>Encryption Overnight</option>
            <option>Alarm Check</option>
            <option>PM Check</option>
          </select>
          </div>

      </div>
    </div> <!-- load-list -->


    <div id= "ne-list" class="subcontainer col-lg-5 col-md-5">
      
      <!-- This extra div is just to adjust the ne-check-all to match NE -->
      <div class="ne-container col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-12 col-md-12">
          <span class="ne-check"> <input id= "ne-check-all" type="checkbox" />  </span>
        </div>
      </div>

      <!--                          NE list                              -->
      <% for ne in @nes %>
        <div class="ne-container col-lg-12 col-md-12 col-sm-12">
          <div class="col-lg-5 col-md-5 col-sm-5" contextmenu="mymenu">

            <span> <input class="ne-check" type="checkbox" value=<%= ne[:id] %> > </span>
            <span> <%= ne_status ne %> </span>
            <span class="ne-prop"><%= ne[:name] %> </span>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-3">
            <span class="ne-prop"><%= ne[:version] %> </span>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4">
            <span class="ne-prop"><%= ne[:ectype] %></span>
          </div>

          <div>
          <%= button_to "delete", user_ne_path(@user, ne), :method => :delete,
            :form => {"style" => "display:none", "id" => "delete-"+ne[:id].to_s}, :data => ne[:id] %>

          <%= button_to "edit", edit_user_ne_path(@user, ne), :method => :get, 
            :form => {"style" => "display:none", "id" => "edit-"+ne[:id].to_s}, :data => ne[:id] %>

          <%= button_to "upgrade", user_ne_upgrade_path(@user, ne), :method => :post, 
            :form => {"style" => "display:none", "id" => "upgrade-"+ne[:id].to_s}, :data => ne[:id] %>
          </div>
        </div><!-- ne-container -->
      <% end %>
    </div> <!-- NE list -->


    <div id= "profile-list" class="subcontainer col-lg-5 col-md-5">

      <div class="profile-container col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-4 col-md-4 col-sm-4">
          <label class="label-radio"><input class ="profile-el" name="profile-radio" type="radio"> Falcon - 1</label> 
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
          <span> 14-nov-16 </span>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
          <span> PASS </span>
        </div> <!-- profile  -->
      </div>
      

      <div class="profile-container col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-4 col-md-4 col-sm-4">
          <label class="label-radio"><input name="profile-radio" type="radio"> Falcon - 2</label> 
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
          <span> 16-nov-16 </span>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
          <span> FAIL </span>
        </div> <!-- profile  -->
      </div>
      
      <div class="profile-container col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-4 col-md-4 col-sm-4">
          <label class="label-radio"><input name="profile-radio" type="radio"> Backbone - 1</label> 
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
          <span> 10-jan-16 </span>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
          <span> PASS </span>
        </div> <!-- profile  -->
      </div>

    </div> <!-- Profile list -->

</div>