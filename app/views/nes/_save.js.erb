$("ul.errors").html("")
<% if @ne.errors.any? %>
	
  <% @ne.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>

 $("#main-content").html("<%= escape_javascript(render 'index') %>")
 $("#ne-modal").modal("hide")


  
<% end %>